{
	"name": "@sapphire/string-store",
	"version": "2.0.0",
	"description": "High-capacity raw data storage in UTF-8 strings",
	"author": "@sapphire",
	"license": "MIT",
	"main": "dist/cjs/index.cjs",
	"module": "dist/esm/index.mjs",
	"browser": "dist/iife/index.global.js",
	"unpkg": "dist/iife/index.global.js",
	"types": "dist/cjs/index.d.cts",
	"napi": {
		"name": "string-store",
		"triples": {
			"additional": [
				"aarch64-apple-darwin",
				"aarch64-unknown-linux-gnu",
				"aarch64-pc-windows-msvc"
			]
		}
	},
	"exports": {
		"import": {
			"types": "./dist/esm/index.d.mts",
			"default": "./dist/esm/index.mjs"
		},
		"require": {
			"types": "./dist/cjs/index.d.cts",
			"default": "./dist/cjs/index.cjs"
		},
		"browser": "./dist/iife/index.global.js"
	},
	"sideEffects": false,
	"homepage": "https://github.com/sapphiredev/utilities/tree/main/packages/string-store",
	"scripts": {
		"test": "vitest run",
		"lint": "eslint src tests --ext ts --fix -c ../../.eslintrc",
		"docs": "typedoc-json-parser",
		"build": "yarn gen-index && tsup && yarn build:rename-cjs-index",
		"build:rename-cjs-index": "tsx ../../scripts/rename-cjs-index.cts",
		"prepack": "yarn build",
		"bump": "cliff-jumper",
		"check-update": "cliff-jumper --dry-run",
		"gen-index": "tsx ../../scripts/gen-index.cts string-store --write",
		"artifacts": "napi artifacts",
		"napi-build": "napi build --platform --release",
		"napi-build:debug": "napi build --platform",
		"prepublishOnly": "napi prepublish -t npm",
		"napi-test": "ava",
		"universal": "napi universal",
		"version": "napi version"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/utilities.git",
		"directory": "packages/string-store"
	},
	"files": [
		"dist/"
	],
	"ava": {
		"timeout": "3m"
	},
	"engines": {
		"node": ">=v20",
		"npm": ">=10"
	},
	"keywords": [
		"@sapphire/string-store",
		"bot",
		"typescript",
		"ts",
		"yarn",
		"discord",
		"sapphire",
		"standalone"
	],
	"bugs": {
		"url": "https://github.com/sapphiredev/utilities/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@favware/cliff-jumper": "^6.0.0",
		"@napi-rs/cli": "^2.18.4",
		"@vitest/coverage-v8": "^3.2.4",
		"ava": "^6.0.1",
		"tsup": "^8.5.0",
		"tsx": "^4.20.3",
		"typedoc": "^0.26.11",
		"typedoc-json-parser": "^10.2.0",
		"typescript": "~5.4.5",
		"vitest": "^3.2.4"
	}
}
